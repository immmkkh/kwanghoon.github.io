        <label for="exampleInputEmail1">age</label>
        <input name ="age" type="text" class="form-control" id="exampleInputEmail1" placeholder="">
      </div>
      
      <div class="form-group">
        <label for="exampleInputEmail1">title</label>
        <input name ="title" type="text" class="form-control" id="exampleInputEmail1" placeholder="">
      </div>
      
      <input name = "hostid" type="hidden" id="postnumber" id="exampleInputEmail1" value="<%=@host.id%>"> </input>
     
